{
	"compilerOptions": {
		"target": "ES6",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"allowJs": true,
		"lib": ["dom", "es6"],
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"files": ["src/index.ts"],
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", ".vscode", ".vs", "docker"]
}
